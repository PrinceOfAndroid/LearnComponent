<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taos.up.learnui">

    <application
        android:name=".application.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LearnUiListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.DragBubbleActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.CommonUiActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.ScrollRecyclerViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.SplashUiActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.ModeActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.MyRecyclerViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.BannerActivity"
            android:screenOrientation="portrait" />

        <service android:name=".service.BinderService" />

        <meta-data
            android:name="design_width"
            android:value="720" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

    </application>

</manifest>